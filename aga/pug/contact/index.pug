                                        input.form-label__input(type="text" required)
                                    label.form-label.form-label--smallGutter.form-label--required.col-md-6.col-sm-12
                                        p.form-label__title Phone:
                                        input.form-label__input(type="tel" required)
                                    label.form-label.form-label--smallGutter.form-label--required.col-md-6.col-sm-12
                                        p.form-label__title Company:
                                        input.form-label__input(type="text" required)
                                    label.form-label.form-label--smallGutter.form-label--required.col-md-6.col-sm-12
                                        p.form-label__title E-mail:
                                        input.form-label__input(type="email" required)
                                    label.form-label.form-label--smallGutter.col-sm-12
                                        p.form-label__title Address:
                                        input.form-label__input(type="tel")
                                    label.form-label.form-label--smallGutter.col-sm-12
                                        p.form-label__title Main Products:
                                        input.form-label__input(type="tel")
                                    .form-label.form-label--smallGutter.col-sm-12
                                        p.form-label__title Type of Business:
                                        .form-checkBox
                                            label.form-checkBox-label
                                                input.form-label__inputNone(type="checkbox" name="Type")
